<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/managementLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".view.ManagementActivity">

    <!-- Barra superior con menú -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:title="Books"
        android:titleTextColor="@android:color/white"
        app:titleCentered="true"
        app:menu="@menu/management_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Etiqueta principal -->
    <TextView
        android:id="@+id/lblOption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option selected"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Campo ID -->
    <TextView
        android:id="@+id/lblId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/lblOption"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/txtId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter ID"
        app:layout_constraintStart_toEndOf="@id/lblId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lblId"
        android:inputType="number" />

    <!-- Campo Título -->
    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txtId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <EditText
        android:id="@+id/txtTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Book title"
        app:layout_constraintStart_toEndOf="@id/lblTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lblTitle" />

    <!-- ComboBox (Spinner en Android) para autor -->
    <TextView
        android:id="@+id/lblAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <Spinner
        android:id="@+id/spnAuthor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/lblAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/lblAuthor" />

    <!-- Botón para crear autor nuevo -->
    <Button
        android:id="@+id/btnNewAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Author"
        app:layout_constraintTop_toBottomOf="@id/spnAuthor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Lista de géneros -->
    <TextView
        android:id="@+id/lblGenres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btnNewAuthor"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp" />

    <ListView
        android:id="@+id/lstGenres"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/lblGenres"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botones inferiores -->
    <Button
        android:id="@+id/btnSaveBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        app:layout_constraintTop_toBottomOf="@id/lstGenres"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnAcceptAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept Author"
        app:layout_constraintTop_toBottomOf="@id/lstGenres"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>